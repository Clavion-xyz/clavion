{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "moduleResolution": "Node16",
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "isolatedModules": true,
    "noUncheckedIndexedAccess": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": [
    "packages/*/src/**/*.ts",
    "packages/*/test/**/*.ts",
    "tests/**/*.ts",
    "tools/**/*.ts"
  ],
  "exclude": ["node_modules", "dist"],
  "references": [
    { "path": "packages/types" },
    { "path": "packages/audit" },
    { "path": "packages/policy" },
    { "path": "packages/signer" },
    { "path": "packages/preflight" },
    { "path": "packages/registry" },
    { "path": "packages/sandbox" },
    { "path": "packages/core" },
    { "path": "packages/adapter-openclaw" },
    { "path": "packages/sdk" },
    { "path": "packages/cli" }
  ]
}
