{
  "name": "clavion",
  "version": "0.1.0",
  "private": true,
  "description": "Secure crypto runtime for autonomous agents",
  "author": "Dmitri N",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/clavion-xyz/clavion.git"
  },
  "homepage": "https://github.com/clavion-xyz/clavion",
  "bugs": "https://github.com/clavion-xyz/clavion/issues",
  "keywords": ["crypto", "blockchain", "ethereum", "ai-agents", "security", "defi", "autonomous-agents", "iscl"],
  "type": "module",
  "engines": {
    "node": ">=20.0.0"
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "tsc -b",
    "start": "node packages/core/dist/main.js",
    "dev": "tsx packages/core/src/main.ts",
    "test": "vitest run",
    "test:unit": "vitest run packages/*/test",
    "test:integration": "vitest run tests/integration",
    "test:security": "vitest run tests/security",
    "test:e2e": "vitest run tests/e2e",
    "test:watch": "vitest",
    "lint": "eslint .",
    "format": "prettier --write '**/*.{ts,json,md,yaml}'",
    "format:check": "prettier --check '**/*.{ts,json,md,yaml}'",
    "generate:hashes": "tsx tools/fixtures/generate-hashes.ts"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^20.19.32",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^9.1.2",
    "prettier": "^3.8.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
  }
}
